--- 
  cluster: 
    name: <%= cluster_name %>
    routing:
      allocation:
        node_concurrent_recoveries: 6
  bootstrap.mlockall: true
  node: 
    name: <%= es_name %>
    datacenter: <%= datacenter %>
  discovery:
    zen:
      ping_retries: "2"
      minimum_master_nodes: "2"
      ping_timeout: "4"
    zen.ping.unicast.hosts:
<% [nodes].flatten.each do |node| -%>
      - <%= node %>
<% end -%>
  threadpool: 
    refresh: 
      type: fixed
      reject_policy: caller
      size: <%= es_threads %>
    bulk: 
      type: fixed
      reject_policy: caller
      size: <%= es_bulk_threads %>
      queue_size: 10000
    search: 
      type: fixed
      reject_policy: caller
      size: <%= es_threads %>
    index: 
      type: fixed
      reject_policy: caller
      size: <%= es_threads %>
  settings: 
    number_of_shards: "10"
    number_of_replicas: "2"
  gateway: 
    expected_nodes: "<%= expected_nodes %>"
    recovery_after_nodes: "2"
  action: 
    disable_shutdown: "true"
    disable_delete_all_indices: "true"
  index: 
    analysis: 
      analyzer: 
        standardPlusWordDelimiter: 
          type: custom
          filter: [standard, wordDelim, lowercase, stop, dict]
          tokenizer: standard
      filter: 
        dict: 
          type: dictionary_decompounder
          word_list_path: wordlist.txt
        wordDelim: 
          preserve_original: "true"
          type: word_delimiter
    cache:
      field:
        type: soft
    store:
      type: mmapfs
    merge:
        policy:
            max_merged_segment: 2g
            segments_per_tier: 24
            max_merge_at_once: 8 
  indices:
    recovery:
        concurrent:
            streams: 5
        max_bytes_per_sec: 20mb
    cache:
      filter:
        size: <%= cache_filter_size %>
